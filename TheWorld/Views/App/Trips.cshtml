@*@model IEnumerable<TheWorld.Models.Trip>*@

@{
    ViewBag.Title = "HomePage";
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-6">
            <h1>Welcome to the World</h1>
            <a asp-controller="App" asp-action="trips" class="btn btn-lg btn-success">View my trips</a>
        </div>
        <div class="col-md-6">
            <h2>The map</h2>
            <ul>
                @foreach (var item in Model)
            {
                    <li>@item.Name</li>
                }
            </ul>
        </div>
    </div>




</div>